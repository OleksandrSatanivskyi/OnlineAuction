@model FortuneWheel.Models.Wheels.GetAllWheelsModel

<table>
    <thead>
        <tr>
            <th>Wheel Id</th>
            <th>Title</th>
            <th>Creation Date</th>
            <!-- Add more headers for additional fields -->
        </tr>
    </thead>
    <tbody>
        @if (Model.Wheels != null && Model.Wheels.Any())
        {
            foreach (var wheel in Model.Wheels)
            {
                <tr>
                    <td>@wheel.Id</td>
                    <td>@wheel.Title</td>
                    <td>@wheel.CreationDate</td>
                    <!-- Add more cells for additional fields -->
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No wheels available.</td>
                <!-- Use colspan to span across all columns -->
            </tr>
        }
    </tbody>
</table>