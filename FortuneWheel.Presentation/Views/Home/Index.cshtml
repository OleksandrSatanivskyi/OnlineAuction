@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <a href="/Auth/RedirectToOAuthServer">Authorize</a>

    <div class="temp">
        <div class="wContainer">
            <div class="spinBtn">Spin</div>
            <div class="wheel">
                <div class="number" style="--i:1; --crl:#db7093;"><span>100</span></div>
                <div class="number" style="--i:2; --crl:#3498db;"><span>200</span></div>
                <div class="number" style="--i:3; --crl:#2ecc71;"><span>300</span></div>
                <div class="number" style="--i:4; --crl:#e74c3c;"><span>400</span></div>
                <div class="number" style="--i:5; --crl:#f39c12;"><span>500</span></div>
                <div class="number" style="--i:6; --crl:#8e44ad;"><span>600</span></div>
                <div class="number" style="--i:7; --crl:#1abc9c;"><span>700</span></div>
                <div class="number" style="--i:8; --crl:#d35400;"><span>800</span></div>
            </div>
        </div>
    </div>
    
    
</div>
