@using FortuneWheel.Domain
@model FortuneWheel.Models.AccountModel
@{
    Layout = "_WheelsLayout";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<header class="wheel-actions-header">
    <h5 class="wheel-actions-title page-title">@Localizer["User Settings"]</h5>
</header>

<form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="UpdateAccount">
    <div class="avatar-container">
        @if (!string.IsNullOrEmpty(Model.AvatarName))
        {
            <img class="avatar-img" src="~/images/@Model.AvatarName" alt="User Avatar">
        }
        else
        {
            <img class="avatar-img" src="~/images/default-avatar.jpg" alt="User Avatar">
        }
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-up upload-icon" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
            <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383zm.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
        </svg>
        <input id="avatar-file-input" type="file" accept="image/*" style="display: none;" name="Photo" asp-for="Photo">
    </div>

    <div class="setting-row">
        <div>@Localizer["Name"]:</div>
        <input type="text" class="form-control settings-input" asp-for="Name" />
    </div>
    <div class="setting-row">
        <div>@Localizer["Surname"]:</div>
        <input type="text" class="form-control settings-input" asp-for="Surname" />
    </div>
    <div class="setting-row">
        <div>@Localizer["Email"]:</div>
        <input type="text" class="form-control settings-input" asp-for="Email" disabled />
    </div>

    <div class="setting-row">
        <div class="setting-label">@Localizer["Language"]:</div>
        <div class="setting-value">
            <select class="settings-dropdown" asp-for="Language" id="languageSelector">
                <option value="en-US">@Localizer["English"]</option>
                <option value="uk-UA">@Localizer["Ukrainian"]</option>
                <option value="de-DE">@Localizer["German"]</option>
                <option value="fr-FR">@Localizer["French"]</option>
            </select>
        </div>
    </div>
    <div class="setting-row">
        <div class="setting-label">@Localizer["Theme"]:</div>
        <div class="setting-value">
            <select id="themeSelect" class="settings-dropdown" asp-for="IsDarkTheme">
                <option value="true">@Localizer["Dark"]</option>
                <option value="false">@Localizer["Light"]</option>
            </select>
        </div>
    </div>
    <div class="setting-row">
        <button type="submit" class="btn-primary btn update-settings-button" onclick="onSave()">@Localizer["Save"]</button>
    </div>

    <input type="hidden" asp-for="Id" value="@Model.Id">
</form>

<script src="~/js/settings.js" asp-append-version="true"></script>